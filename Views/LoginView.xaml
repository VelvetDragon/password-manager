<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Password_Manager.Views.LoginView"
             Title="LoginView">

    <!-- 
        Program Author: Suwan Aryal
        USM ID: w10168297
        Assignment: Password Manager, Part 1, Front-End

        Description:
        This XAML file defines the Login View for users to log into the Password Manager app.
     -->


    <VerticalStackLayout Padding="20">


        <Label Text="Welcome to Password Manager!"
           FontSize="28"
           HorizontalOptions="Center"
           TextColor="White"
           Margin="0,20"/>


        <Border  
        Padding="20" 
        Margin="0,20" 
        BackgroundColor="#292929"
        WidthRequest="400">

            <VerticalStackLayout Spacing="15">


                <Label x:Name="ErrorMessage"
                   Text="Please complete all fields"
                   TextColor="Red" 
                   IsVisible="False"
                   HorizontalOptions="Center"/>

                <Entry Placeholder="Username" 
                   x:Name="UsernameEntry" 
                   TextColor="White" 
                   PlaceholderColor="Gray" 
                   Margin="0,5"/>

                <Entry Placeholder="Password" 
                   x:Name="PasswordEntry" 
                   IsPassword="True" 
                   TextColor="White" 
                   PlaceholderColor="Gray" 
                   Margin="0,5"/>

                <Button Text="Log In"
                    BackgroundColor="#b48dff"
                    TextColor="Black"
                    CornerRadius="5"
                    Margin="0,15"
                    HeightRequest="40"
                    WidthRequest="300"
                    Clicked="btnLoginClicked"/>



            </VerticalStackLayout>
        </Border>

    </VerticalStackLayout>
</ContentPage>