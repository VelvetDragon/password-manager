<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Password_Manager.Views.NewUserView"
             Title="NewUserView">

    <!-- 
    Program Author: Suwan Aryal
    USM ID: w10168297
    Assignment: Password Manager, Part 1, Front-End

    Description:
    This XAML file defines the New User View for creating an account in the Password Manager app.
    -->

    <VerticalStackLayout Padding="20">

        <!-- Label to display "welcome to passowrd manager" -->
        <Label Text="Welcome to Password Manager!"
               FontSize="28"
               HorizontalOptions="Center"
               TextColor="White"
               Margin="0,20"/>

        <!-- Container of the form -->
        <!-- colors are picked from color picker tool -->
        <Border  
            Padding="20" 
            Margin="0,20" 
            BackgroundColor="#292929"  
            WidthRequest="400">

            <VerticalStackLayout Spacing="15">

                <!-- Error message -->
                <Label x:Name="ErrorMessage"
                       Text="Please complete all fields"
                       TextColor="Red" 
                       IsVisible="False"
                       HorizontalOptions="Center"/>

                <!-- input fields -->
                <Entry Placeholder="First Name" 
                       x:Name="FirstNameEntry" 
                       TextColor="White" 
                       PlaceholderColor="Gray" 
                       Margin="0,5"/>

                <Entry Placeholder="Last Name" 
                       x:Name="LastNameEntry" 
                       TextColor="White" 
                       PlaceholderColor="Gray" 
                       Margin="0,5"/>

                <Entry Placeholder="Username" 
                       x:Name="UsernameEntry" 
                       TextColor="White" 
                       PlaceholderColor="Gray" 
                       Margin="0,5"/>

                <Entry Placeholder="Password" 
                       x:Name="PasswordEntry" 
                       IsPassword="True" 
                       TextColor="White" 
                       PlaceholderColor="Gray" 
                       Margin="0,5"/>

                <Entry Placeholder="Re-Enter Password" 
                       x:Name="ReEnterPasswordEntry" 
                       IsPassword="True" 
                       TextColor="White" 
                       PlaceholderColor="Gray" 
                       Margin="0,5"/>

                <Button Text="Create Account"
                        BackgroundColor="#b48dff"
                        TextColor="Black"
                        CornerRadius="5"
                        Margin="0,15"
                        HeightRequest="40"
                        WidthRequest="300"
                        Clicked="btnClicked"/>

                <!-- link to login page -->
                <Button Text="Already have an account? Log In"
                        BackgroundColor="Transparent"
                        TextColor="#b48dff"
                        Clicked="OnGoToLoginClicked"
                        HorizontalOptions="Center"/>

            </VerticalStackLayout>
        </Border>

    </VerticalStackLayout>
</ContentPage>
